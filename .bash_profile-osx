# File  : .bash_profile-osx
# OS    : Mac OS X [Tested on Mavericks]
# What  : osx specfic bash_profile tasks
#############################################################################

# Auto Completion
bind `set completion-ignore-case on`
bind `set show-all-if-ambiguous on`

if [ -d /usr/local/etc/bash_completion.d ]; then
  for usrcomp in `find /usr/local/etc/bash_completion.d`; do
    if [ -f $usrcomp ]; then
      source $usrcomp;
    fi;
  done
  unset usrcomp
fi

if [ -d $HOME/.dotfiles/bash_completion.d ]; then
  for usrcomp in `find $HOME/.dotfiles/bash_completion.d`; do
    if [ -f $usrcomp ]; then
      source $usrcomp;
    fi;
  done
  unset usrcomp
fi

source `brew --repository`/Library/Contributions/brew_bash_completion.sh
