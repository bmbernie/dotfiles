#############################################################################
# System alases - Ubuntu / OS X
#############################################################################

# load osx aliases
if [ $(uname) == "Darwin" ]; then
  source $HOME/dotfiles/.aliases-osx
fi

if [ $(uname) == "Linux" ]; then
  source $HOME/.dotfiles/.aliases-linux
fi

# Draw an ascii tree of the filesystem from where you are
alias mytree="find . -type d | sed -e 1d -e 's/[^-][^\/]*\//--/g' -e 's/^/ /' -e 's/-/|-/'"

# Process Management
alias tu='top -o cpu'
alias tm='top -o vsize'

# Less with colors
alias less='less -irX'

# ROT13-encode text. Works for decoding, too! ;)
alias rot13='tr a-zA-Z n-za-mN-ZA-M'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Gzip-enabled `curl`
alias gurl='curl --compressed'

alias reload="exec $SHELL -l"

#############################################################################
# Network tools
#############################################################################

alias localip='ipconfig getifaddr en1 ; [[ $? -ne 0 ]] && ipconfig getifaddr en0'
alias ipext='curl -s http://checkip.dyndns.org/ | grep -o '[0-9][0-9]*.[0-9][0-9]*.[0-9][0-9]*.[0-9]*''
alias subnet='ip | grep -o "[0-9][0-9]*.[0-9][0-9]*.[0-9][0-9]*"'
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

